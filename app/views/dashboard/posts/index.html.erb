<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', dashboard_post_path(post) %></td>
        <td><%= link_to_if current_user.admin?, 'Edit', edit_dashboard_post_path(post) %></td>
        <td><%= link_to 'Destroy', dashboard_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to_if current_user.admin?, 'New Post', new_dashboard_post_path %>

